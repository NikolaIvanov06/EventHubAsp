@model IEnumerable<EventHubASP.Models.Event>

<h2>My Subscriptions</h2>

@if (!Model.Any())
{
    <p>You are not subscribed to any events.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.Title</td>
                    <td>@ev.Date.ToString("yyyy-MM-dd")</td>
                    <td>@ev.Location</td>
                    <td>@ev.Description</td>
                    <td>
                        <form asp-action="Unsubscribe" asp-route-eventId="@ev.EventID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Unsubscribe
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
