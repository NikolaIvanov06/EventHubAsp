@model IEnumerable<EventHubASP.Models.Event>


<link rel="stylesheet" href="~/css/mySubscriptions.css" asp-append-version="true" />

<div class="container my-subscriptions-container">
    <h2>My Subscriptions</h2>

    @if (!Model.Any())
    {
        <p class="no-subscriptions-message">You are not subscribed to any events.</p>
    }
    else
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>@ev.Title</td>
                        <td>@ev.Date.ToString("yyyy-MM-dd")</td>
                        <td>@ev.Location</td>
                        <td>@ev.Description</td>
                        <td>
                            <form asp-action="Unsubscribe" asp-route-eventId="@ev.EventID" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm action-button">
                                    Unsubscribe
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
