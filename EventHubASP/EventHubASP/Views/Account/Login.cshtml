@model LoginViewModel

<link rel="stylesheet" href="~/css/authUI.css" asp-append-version="true" />


<div class="form-page">
    <div class="form-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post" class="form" id="loginForm">
            <div class="validation-summary">
                @Html.ValidationSummary(true, "", new { @class = "text-danger validation-message visible" })
            </div>
            <div class="input-span">
                <label asp-for="EmailOrUsername" class="label">Email Or Username</label>
                <div class="input-wrapper">
                    <input asp-for="EmailOrUsername" type="text" placeholder="Username or Email" autocomplete="off" class="form-control form-control-username" />
                </div>
                <span asp-validation-for="EmailOrUsername" class="text-danger validation-message"></span>
            </div>
            <div class="input-span">
                <label asp-for="Password" class="label">Password</label>
                <div class="input-wrapper">
                    <input asp-for="Password" type="password" placeholder="Password" autocomplete="off" class="form-control form-control-password password-field" />
                    <span class="eye-icon" aria-label="Toggle password visibility">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                            <path class="eye-open" d="M12 4C7 4 2.73 7.11 1 12c1.73 4.89 6 8 11 8s9.27-3.11 11-8c-1.73-4.89-6-8-11-8Zm0 14c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6Zm0-10c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4Z" />
                            <path class="eye-slash" d="M2 2l20 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger validation-message"></span>
            </div>
            <button type="submit" class="submit">Login</button>

            <div class="register-link">
                Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a>.
            </div>

            <div class="forgot-password-link">
                <a asp-controller="Account" asp-action="ForgotPassword" >Forgot Password?</a>
            </div>
        </form>
        <partial name="_ValidationScriptsPartial"></partial>
    </div>
</div>

</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const eyeIcons = document.querySelectorAll('.eye-icon');

            eyeIcons.forEach(icon => {
                icon.addEventListener('click', function () {
                    const input = this.previousElementSibling;
                    const svg = this.querySelector('.eye-svg');
                    const slash = this.querySelector('.eye-slash');

                    if (input.type === 'password') {
                        input.type = 'text';
                        slash.style.display = 'none';
                    } else {
                        input.type = 'password';
                        slash.style.display = 'block';
                    }
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $("form").validate();
        });
    </script>
}
        
         
