@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/authUI.css">
    <link rel="icon" type="image/png" href="~/logo.png" />
    <style>
        .error-message {
            color: red;
            border: 1px solid red;
            padding: 10px;
            border-radius: 5px;
            background-color: #ffe6e6;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Login</h2>
        <form asp-action="Login" asp-controller="Account" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="error-message"></div>
            }
            <div>
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" placeholder="Enter your username" class="form-control" required />
                <span asp-validation-for="Username" class="error"></span>
            </div>
            <div>
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" placeholder="Enter your password" class="form-control" required />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <button type="submit">Login</button>
        </form>
        <div class="text-center">
            <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a></p>
        </div>
    </div>
    <script src="~/js/authUI.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>