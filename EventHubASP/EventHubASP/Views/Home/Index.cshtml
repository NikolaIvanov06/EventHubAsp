@using Microsoft.AspNetCore.Http

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
<link rel="icon" href="~/logo.png" />



<div class="hero">
    <div class="text-center">
        <h1>Welcome to EventHub</h1>
        <p>Discover and manage events with ease.</p>
        <form action="/" method="post">
            <a href="#features" class="button">Explore Features</a>
        </form>

    </div>
</div>

<section id="features" class="features">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 feature-card">
                <div class="feature-icon">📅</div>
                <h3>Easy Management</h3>
                <p>Organize events effortlessly using our powerful tools.</p>
            </div>
            <div class="col-md-4 feature-card">
                <div class="feature-icon">🌍</div>
                <h3>Wide Reach</h3>
                <p>Promote your events to a larger audience.</p>
            </div>
            <div class="col-md-4 feature-card">
                <div class="feature-icon">🔒</div>
                <h3>Secure Platform</h3>
                <p>Reliable and secure event management solutions.</p>
            </div>
        </div>
    </div>
</section>


@if (User.IsInRole("User"))
{
    <section id="cta" class="cta text-center">
        <div class="container">
            <h2>Want to become an organizer?</h2>
            <p>Join our team of organizers and start creating amazing events. Submit a request to become an organizer and we'll review it promptly.</p>
            <form asp-controller="RoleRequest" asp-action="RequestOrganizerRole" method="get">
            <button class="buttonReq" >Request Organizer Role</button>
            </form>
        </div>
    </section>
}

@if (!User.Identity.IsAuthenticated)
{
    <section id="cta" class="cta text-center">
        <div class="container">
            <h2>Get Started Today!</h2>
            <p>Join EventHub and take your events to the next level.</p>
            <form asp-controller="Account" asp-action="Register" method="get">
            <button class="buttonCta" >Sign Up</button>
            </form>

        </div>
    </section>
}
