@model IEnumerable<News>
@{
    ViewBag.Title = "My News Feed";
}
<link rel="stylesheet" href="~/css/myFeed.css" asp-append-version="true" />

<div class="my-feed-container">
    <h2>My News Feed</h2>

    @if (!Model.Any())
    {
        <h5 style="text-align: center; color: ghostwhite; text-shadow: 0 2px 10px rgba(255, 255, 255, 0.6);">There are no news yet.</h5>
    }
    else
    {
        <div id="newsFeed">
            @foreach (var news in Model)
            {
                <div class="news-item">
                    <h3>@news.Title</h3>
                    <p>@news.Content</p>
                    <small>Published on: @news.PublishedDate.ToString("g")</small>
                </div>
            }
        </div>
    }
</div>